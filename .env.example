# Example environment configuration
# Copy this file to .env and fill with your own values

# Comma-separated wallets (checksummed 0x...)
WALLETS=0x...,0x...,0x...

# Symbols filter (optional). Empty = all. Example: BTC,ETH
SYMBOLS_TO_MONITOR=

# Time window and thresholds
WINDOW_MINUTES=5
MIN_NOCIONAL_USD=10000
POLL_SECONDS=12
COOLDOWN_MINUTES=10

# Consensus threshold
CONSENSUS_COUNT=1

# Use live positions (1 = yes, 0 = no)
USE_POSITIONS=1

# Telegram (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
